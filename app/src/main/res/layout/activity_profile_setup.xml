<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_main"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/fm_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_3sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_profile"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                app:riv_corner_radius="@dimen/_50sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_profile_place_holder" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="@dimen/_2sdp"
                android:background="@drawable/ic_plus_profile" />


        </FrameLayout>


    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/poppins_semi_bold"
                android:text="Here we go!"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Setup Your name and Profile photo,\nthat's will help other to recognize \nyou...."
                android:textColor="@color/text_color"
                android:gravity="center"
                android:textSize="@dimen/_10sdp" />


            <EditText
                android:id="@+id/edt_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:background="@drawable/bg_button"
                android:backgroundTint="@color/bg_item"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center|start"
                android:hint="Enter Your Name"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textCursorDrawable="@drawable/cursur_drawable"
                android:textSize="@dimen/_12sdp" />

            <include layout="@layout/layout_native_ads"/>


            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:text="Start Conversation"
                android:textAllCaps="false"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/bg_button"
                android:fontFamily="@font/poppins_semi_bold"
                android:gravity="center"
                android:paddingLeft="3dp"
                style="?android:attr/borderlessButtonStyle"
                android:paddingRight="3dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>


    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    tools:context=".activity.Info.Activity_Info">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.newfastwa.msgemojitype.gbfo.utils.Header
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleText="WA Info" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">

                <include layout="@layout/layout_native_ads" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="4dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Installed Version"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/bg_item">

                        <TextView
                            android:id="@+id/tv_installed_version"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:text="1"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Latest Version"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/bg_item">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:text="NA"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Install From"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:id="@+id/ln_link"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_margin="@dimen/_3sdp"
                        android:background="@drawable/bg_button"
                        android:backgroundTint="@color/bg_item">

                        <TextView
                            android:id="@+id/tv_linked"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_semi_bold"
                            android:paddingHorizontal="@dimen/_15sdp"
                            android:singleLine="true"
                            android:text="http://www.whatsapp.com/android/"
                            android:textColor="@color/txt_color"
                            android:textSize="@dimen/_15sdp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <include layout="@layout/layout_native_banner_ads" />
    </LinearLayout>
</RelativeLayout>